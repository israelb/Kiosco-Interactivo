package  com.camaras{		import flash.display.Sprite;    import flash.text.TextField;	import flash.text.TextFormat;		public class textFieldDescription extends Sprite{		public function textFieldDescription(theString:String, w:int, h:int) {							var newFormat:TextFormat = new TextFormat();                         			var tf2:TextField = createTextField(0, 0, w, h);			            tf2.condenseWhite = true;            tf2.htmlText = theString;						tf2.textColor = 0x000000;						//newFormat.size = 24;            newFormat.font = "Arial";            newFormat.italic = false;			            tf2.setTextFormat(newFormat);								}						private function createTextField(x:Number, y:Number, width:Number, height:Number):TextField {            var result:TextField = new TextField();            result.x = x;            result.y = y;            result.width = width;            result.height = height;            result.border = false;			result.multiline = true;			result.wordWrap = true;			result.background = false;			result.selectable = false;			//result.backgroundColor = 0xFF6600;            addChild(result);            return result;        }					}	}