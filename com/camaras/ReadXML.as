/** Clase con la cual leemos el XML   * @author Israel Barba Aceves  * @since28/02/08  * @version 1.0.0  */package com.camaras{	import org.casalib.display.CasaMovieClip;	import org.casalib.events.LoadEvent;	import org.casalib.load.DataLoad;	import flash.display.Sprite;	public class ReadXML extends Sprite  {		private var _dataLoad:DataLoad;		private var _clusters:XML;		private var _totalNodes:Number = 0;		private var _arrayNombres:Array = new Array();		/** LeerMenu Constructor		  * @parammyXMLCadena con el archivo xml de lo canales		  *		  */		public function ReadXML(myXML:String = "clusters.xml") {			_dataLoad = new DataLoad(myXML);			_dataLoad.addEventListener(LoadEvent.COMPLETE, _onComplete);			_dataLoad.start();		}		private function _onComplete(e:LoadEvent):void {			trace( _dataLoad.dataAsXml.toXMLString());			_clusters = new XML(_dataLoad.dataAsXml.toXMLString());			_totalNodes = _clusters.cluster.video.length();			_arrayNombres.push(_clusters.cluster.nombre);						//Hacemos un XMLList para obtener los nombres de los canales			for each(var nombre:XML in _clusters.cluster.nombre){				//_nombreDeCanal.push(nombre);				trace(nombre);			}							//trace("Arreglo:" + _arrayNombres);			//trace(_clusters.cluster.video.length())		}		//---- GETTERS / SETTERS ------------------------------------------------------------						/** 		 * Length of time in seconds (or frames for frames-based tweens/timelines) before the tween should begin. 		 * The tween's starting values are not determined until after the delay has expired (except in from() tweens) 		 **/		public function get totales():Number {						return _totalNodes;		}				public function set totales(n:Number):void {						_totalNodes = n;		}				/** 		 * Length of time in seconds (or frames for frames-based tweens/timelines) before the tween should begin. 		 * The tween's starting values are not determined until after the delay has expired (except in from() tweens) 		 **/		public function get nombres():Array {						return _arrayNombres;		}				public function set nombres(n:Array):void {						_arrayNombres = n;		}	}}